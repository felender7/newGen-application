
<div class="container">
  <div class="shadow-none p-3 mb-5 bg-light roundedk">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <h3>Saved Contact</h3>
        </div>
        <div class="col-md-4">
            <p class="float-right"> <a href="/"> <i class="fa fa-window-close" data-toggle="tooltip" title="Close"> </i></a></p>
        </div>

      </div>
    </div>
  </div>

  <div class="shadow-sm p-3 mb-5 bg-white rounded">
    <p>
      <strong>Full name:</strong><br>
      <%= @contact.full_name %>
    </p>

    <p>
      <strong>Phone:</strong><br>
      <%= @contact.phone %>
    </p>

    <small style="color:grey">Sent: <%=@contact.created_at.to_time%></small>
    <hr>
    <%= link_to edit_contact_path(@contact) do %>
       <i class="fa fa-pencil-square-o"></i>
    <%end%> |
    <%= link_to contacts_path do %>
    <i class="fa fa-arrow-circle-left"></i>
    <%end%>
  </div>
</div>
