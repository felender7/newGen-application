<%if current_user.contacts.count >= 0 %>
<div class="card">
<div class="table-responsive">
<table class="table table-striped  table-hover">
  <tbody>
    <% @contacts.each do |contact| %>
    <%if current_user && contact.user == current_user%>

      <tr>

        <td><%=image_tag("img_avatar.png", class:"avatar-2") %></td>
        <td style="width:50%"><span><%= contact.full_name %></span><br>
          <small class="text-muted"> <%=render'contacts/icons'%><%= contact.group %></small>
        </td>
        <td style="width:100%">+<%= contact.phone %></td>
        <td >
          <div class="btn-group">
            <%= link_to "#",  class:"btn btn-sm btn-outline-secondary"  do %>
              <i class=" fa fa-paper-plane-o" data-toggle="tooltip" title="Send" > </i>
          <%end%>

          <%= link_to contact,  class:"btn btn-sm btn-outline-secondary"  do %>
            <i class=" fa fa-list" data-toggle="tooltip" title="Show" > </i>
        <%end%>
        <%= link_to contact, method: :delete, data: { confirm: 'Are you sure?' } , class:"btn btn-sm btn-outline-secondary" do %>
            <i class=" fa fa-trash-o" data-toggle="tooltip" title="Delete" ></i>
        <%end%>
        </div>
        </td>

      </tr>
      <%end%>
    <%end%>
  </tbody>
</table>
</div>
</div>
<%else%>
<%=render'contacts/error'%>
<%end%>
