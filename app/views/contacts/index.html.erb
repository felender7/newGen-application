
<div class="container-fluid">
<h3>All Contcts</h3>
 <hr>
 <%= link_to 'Add New Contact', new_contact_path, class:"btn btn-primary" %><br><br>
<table class="table">
  <thead>
    <tr>
      <th>Firts name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
    <%if current_user && contact.user == current_user%>
      <tr>
        <td><%= contact.full_name %></td>
        <td><%= contact.phone %></td>
        <td><%= link_to edit_contact_path(contact)  do %>
            <i class=" fa fa-pencil-square-o" data-toggle="tooltip" title="Edit" ></i>
        <%end%>
        </td>
        <td><%= link_to contact, method: :delete, data: { confirm: 'Are you sure?' }  do %>
            <i class=" fa fa-trash-o" data-toggle="tooltip" title="Delete" ></i>
        <%end%>
        </td>
      </tr>
      <%end%>
    <% end %>
  </tbody>
</table>
<br>
