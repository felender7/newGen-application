<div class="container">
  <div class="shadow-none p-3 mb-5 bg-light roundedk">
    <h3>Sent Message</h3>

  </div>
 <%= link_to 'Compose Message', new_compose_message_path, class:"btn btn-primary" %><br><br>
  <table class="table">
    <thead>
      <tr>
        <th>Recipient</th>
        <th></th>

        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @compose_messages.each do |compose_message| %>
        <tr>
          <td><%= compose_message.recipient %></td>
          <td><span class="bg-danger btn-sm"><i class="fa fa-clock-o"></i>  <%= time_ago_in_words(compose_message.created_at)   %> ago </span></td>
          <td><%= link_to compose_message do %><i class="fa fa-list" data-toggle="tooltip" title="View"></i><%end%></td>
          <td><%= link_to compose_message, method: :delete, data: { confirm: 'Are you sure?' }  do %> <i class="fa fa-trash-o" data-toggle="tooltip" title="Delete"></i><%end%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
