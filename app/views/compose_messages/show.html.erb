<div class="container">
  <div class="shadow-none p-3 mb-5 bg-light roundedk">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
            <h3>Sent Message</h3>
        </div>
        <div class="col-md-4">
            <p class="float-right"> <a href="/"> <i class="fa fa-window-close" data-toggle="tooltip" title="Close"> </i></a></p>
        </div>

      </div>
    </div>
  </div>
  <div class="shadow-sm p-3 mb-5 bg-white rounded">
   <%if current_user && @compose_message.user == current_user%>
      <strong>To:</strong> | <%= @compose_message.recipient %>
    <hr>
    <p>
      <%= @compose_message.message %>
    </p>
    <small style="color:grey">Sent: <%=@compose_message.created_at.to_time%></small>
    <%end%>
  </div>
</div>
