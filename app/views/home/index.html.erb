
<div class="container">
  <!-- Breadcrumbs-->
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item active" aria-current="page"><i class="fa fa-smile-o"></i> Hi, <%=current_user.full_name%>  </li>
    </ol>
  </nav>

   <div class="row">
     <div class="col-md-6">
       <!-- Nav tabs -->
        <ul class="nav nav-tabs">
          <li class="nav-item">
            <a class="nav-link active" data-toggle="tab" href="#inbox">Inbox(0)</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#draft">Daft(0)</a>
          </li>

          <li class="nav-item">
            <a class="nav-link" data-toggle="tab" href="#draft">Sent(<%=@compose_messages_count %>)</a>
          </li>
        </ul>

        <!-- Tab panes -->
        <div class="tab-content">
          <div class="tab-pane container active" id="inbox">...</div>
          <div class="tab-pane container fade" id="draft">...</div>
         <div class="tab-pane container fade" id="Sent">...</div>
        </div>

     </div>


     <div class="col-md-6">
       <!-- Icon Cards-->
       <div class="row">
         <div class="col-xl-6 col-sm-6 mb-3">
           <a href="/compose_messages/new">
           <div class="card text-white bg-primary o-hidden h-100">
             <div class="card-body">
               <div class="card-body-icon">
                 <i class="fa fa-fw fa-comments"></i>
               </div>
               <h3>SEND SMS</h3>
               <small> <i class="fa fa-angle-right"></i> Compose Message</small>
             </div>
             <span class="card-footer text-white clearfix small z-1">
                <span class="badge badge-light">
                 0 Message Recieved </span>
               <span class="float-right">
                 <i class="fa fa-angle-right"></i>
               </span>
             </span>
           </div>
           </a>
         </div>

         <div class="col-xl-6 col-sm-6 mb-3">
         <a href="/contacts">
           <div class="card text-white bg-warning o-hidden h-100">
             <div class="card-body">
               <div class="card-body-icon">
                 <i class="fa fa-fw fa-list"></i>
               </div>
               <h3>CONTACTS</h3>
               <small> <i class="fa fa-angle-right"></i> Individuals</small> <br>
               <small> <i class="fa fa-angle-right"></i> Groups</small>
             </div>
             <span class="card-footer text-white clearfix small z-1" href="#">
              <span class="badge badge-light"> <%=pluralize(@contacts_count,'Contact' )%> </span>

               <span class="float-right">
                 <i class="fa fa-angle-right"></i>
               </span>
             </span>
           </div>
         </a>
         </div>
       </div>
         <div class="row">
         <div class="col-xl-6 col-sm-6 mb-3">
           <a href="/compose_messages">
           <div class="card text-white bg-success o-hidden h-100">
             <div class="card-body">
               <div class="card-body-icon">
               <i class="fa fa-fw fa-envelope"></i>
               </div>
               <h3>SENT MESSAGES</h3>
               <small> <i class="fa fa-angle-right"></i> Download</small> <br>
               </div>
               <span class="card-footer text-white clearfix small z-1" href="#">
                  <span class="badge badge-light"> <%=pluralize(@compose_messages_count,'Message' )%> </span>
               <span class="float-right">
                 <i class="fa fa-angle-right"></i>
               </span>
             </span>
           </div>
           </a>
         </div>
         <div class="col-xl-6 col-sm-6 mb-3">
           <a href="users/edit">
           <div class="card text-white bg-danger o-hidden h-100">
             <div class="card-body">
               <div class="card-body-icon">
                 <i class="fa fa-fw fa-cogs"></i>
               </div>
               <h3>SETTINGS</h3>
               <small> <i class="fa fa-angle-right"></i> My Profile</small> <br>
             </div>
             <span class="card-footer text-white clearfix small z-1" href="#">
               <span class="float-right">
                 <i class="fa fa-angle-right"></i>
               </span>
             </span>
           </div>
         </div>
         </a>
       </div>
     </div>


   </div>


</div>
